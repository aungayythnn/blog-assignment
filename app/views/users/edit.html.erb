<h1>Edit User</h1>

<% if @user.errors.any? %>
    <h3><%= pluralize(@user.errors.count, "error") %></h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, url: user_path(@user), method: :patch do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Update User" %>
  </div>
<% end %>

<p><%= link_to "Back to Users List", users_list_path %></p>
